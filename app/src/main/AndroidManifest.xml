<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.preshlen.sologamelonesurvivour">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".front.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".front.RegisterActivity" />
        <activity android:name=".front.HomeActivity"   />
        <activity
            android:name=".front.MapActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".front.ChooseQuestionActivity" />
        <activity android:name=".front.AnswerQuestionActivity"></activity>
    </application>

</manifest>
